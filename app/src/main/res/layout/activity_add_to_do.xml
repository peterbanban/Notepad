<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.administrator.notepad.activity.AddToDoActivity">
     <include layout="@layout/layout_appbar"/>
    <EditText
        android:id="@+id/et_todo_name"
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@color/colorWhite_1"
        android:hint="任务名称"
        android:paddingLeft="16dp"
        android:textColor="@color/colorDeepGray"/>
    <RelativeLayout
         android:background="@color/colorWhite_1"
         android:layout_marginTop="@dimen/activity_vertical_margin"
         android:layout_width="wrap_content"
         android:layout_height="35dp">
         <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="开启提醒"
             android:layout_centerVertical="true"
             android:layout_marginLeft="@dimen/activity_horizontal_margin"
             />
          <CheckBox
              android:id="@+id/cb_need_notify"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerVertical="true"
              android:layout_alignParentRight="true"
              android:layout_marginRight="@dimen/activity_horizontal_margin"/>

     </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_time_click"
        android:clickable="true"
        android:paddingLeft="16dp"
        android:background="@color/colorWhite_1"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_marginTop="1dp">
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="提醒时间"
            />
        <ImageView
            android:id="@id/iv_go"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:src="@drawable/ico_3"
            style="@style/Icon"
            />
        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@id/iv_go"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_5"
    >
        <EditText
            style="?android:attr/textViewStyle"
            android:background="@null"
            android:id="@+id/et_todo_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="130dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="40dp"
            android:layout_marginBottom="30dp"
            android:hint="内容详情(可不填)"
            android:paddingLeft="16dp"
            android:gravity="left"
            android:textColor="@color/colorDeepGray"/>
    </RelativeLayout>

</LinearLayout>
